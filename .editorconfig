# EditorConfig for WarPie
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# Bash scripts
[*.sh]
indent_size = 4
# Shell style guide recommends 2, but 4 is more readable
# Change to 2 if following Google Shell Style Guide strictly

# YAML files (GitHub Actions, configs)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_size = 4

# Configuration files
[*.{conf,cfg,ini}]
indent_size = 4

# TOML files (pyproject.toml)
[*.toml]
indent_size = 4
