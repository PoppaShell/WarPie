{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^(openLogs|closeLogs|openFilters|closeFilters|switchFilterTab|loadFilters|loadTargets|scanSSID|addExclusion|quickExclude|removeFilter|addTargetOUI|removeTarget|escapeHtml)$" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "indent": "off",
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "prefer-const": "warn"
  },
  "globals": {
    "fetch": "readonly",
    "document": "readonly",
    "window": "readonly",
    "location": "readonly",
    "setInterval": "readonly",
    "clearInterval": "readonly",
    "setTimeout": "readonly",
    "confirm": "readonly",
    "encodeURIComponent": "readonly",
    "Date": "readonly",
    "event": "readonly"
  }
}
